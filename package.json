{
  "name": "diy-launcher",
  "version": "1.2.0",
  "description": "",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc",
    "start": "chcp 65001 > nul && tsc && electron .",
    "clean": "rm -rf dist logs config.xml",
    "pack": "npm run build && electron-builder --dir",
    "pack-release": "npm run build && electron-builder",
    "pack-clean": "rm -rf ./package"
  },
  "keywords": [],
  "author": "wlg-shinya",
  "license": "MIT",
  "build": {
    "appId": "com.welovegamesinc.diy-launcher",
    "productName": "DiyLauncher",
    "directories": {
      "output": "package"
    },
    "files": [
      "dist/**/*",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "config.default.xml",
        "to": "config.default.xml"
      }
    ],
    "extraFiles": [
      {
        "from": "README.md",
        "to": "./README.txt"
      }
    ],
    "win": {
      "target": "zip",
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.2",
    "iconv-lite": "^0.7.0"
  }
}
